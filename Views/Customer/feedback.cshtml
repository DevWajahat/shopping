
@{
    ViewData["Title"] = "feedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mt-4 pt-3">
    <h2 class="mt-5">Get In Touch With Us</h2>
    <div class="row">
        <div class="col-md-5">
            <form method="post" asp-action="feedback">
                <input type="text" placeholder="Enter Your Full Name" name="user_name" class="form-control my-3" />
                <textarea placeholder="Enter Your Message" name="user_message" class="form-control my-3" rows="10"></textarea>
                <input type="submit" class="btn btn-primary block-btn mt-3" value="Send Feedback" style="width:100%"/>
               </form>
    </div>
        <div class="col-md-1"></div>
        <div class="col-md-6">
            <h2>Our Location</h2>
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3619.3141343435886!2d67.15182493460973!3d24.887264304672424!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3eb339999415e0c3%3A0x36742eee0fd9c291!2sAptech%20Metro%20Star%20Gate!5e0!3m2!1sen!2s!4v1741986139233!5m2!1sen!2s" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
       <h6 class="text-success">@TempData["message"]</h6>
</div>

