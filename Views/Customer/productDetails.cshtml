
@{
    ViewData["Title"] = "productDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Product>
<div class="container mt-3">
    
    <div class="container mt-5 pb-5 mb-5" style="margin-top: 100px !important; margin-bottom:20px;">
        <div class="row">
            @foreach(var pro in Model){
            <div class="col-md-6 mt-3">
                <img src="@("~/product_images/"+@pro.product_image)" asp-append-version="true" alt="Product Image" class="img-fluid" style="width:400px !important;height:400px !importnat;">
            </div>
            <div class="col-md-6">
                <h2 class="text-primary">@pro.product_name</h2>
                <h3></h3>
                <p>@pro.category.category_name</p>
                <hr>
                <h4 class="text-danger">Rs.@pro.product_price</h4>
                
                <p><strong>Availability:</strong> In Stock</p>
                    <div class="form-group">
                        <label for="quantity">Quantity</label>
                        <input type="number" class="form-control" id="quantity" name="quantity" min="1" value="1">
                    </div>
                    <button type="button" class="btn btn-primary mt-3 col-lg-12 col-md-12 col-sm-12 col-xs-12" style="width: 100% !important;" >Buy Now <i class="fa-solid fa-bag-shopping" style="color: #ffffff;"></i></button>
            </div>
            }
        </div>
    </div>
</div>
