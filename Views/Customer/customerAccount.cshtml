
@{
    ViewData["Title"] = "customerAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Customer>
<div class="container">
      <div class="row mt-3">
          <div class="col-md-2"></div>
          <div class="col-md-8">
              <h4 class="text-center">Customer Profile</h4>

              <form method="post" enctype="multipart/form-data" asp-action="changeProfileImage">

                <input type="hidden" name="Customer_id" value="@Model[0].Customer_id" />

                <img src="@("~/customer_images/"+Model[0].Customer_image)" style="width=250px;height=250px" asp-append-version="true" />
                <input type="file" name="Customer_image" value="@Model[0].Customer_image" />

                <input type="hidden" placeholder="Enter Your Name" name="Customer_name" value="@Model[0].Customer_name" class="form-control mt-3" />
                
                <input type="hidden" placeholder="Enter Your Phone" name="Customer_phone" value="@Model[0].Customer_phone" class="form-control mt-3" />
                
                <input type="hidden" placeholder="Enter Your Email" name="Customer_email" value="@Model[0].Customer_email" class="form-control mt-3" />
               
                <input type="hidden" placeholder="Enter Your Password" name="Customer_password" value="@Model[0].Customer_password" class="form-control mt-3" />
               
                <input type="hidden" placeholder="Enter Your Gender" name="Customer_gender" value="@Model[0].Customer_gender" class="form-control mt-3" />
               
                <input type="hidden" placeholder="Enter Your City" name="Customer_city" value="@Model[0].Customer_city" class="form-control mt-3" />
               
                <input type="hidden" placeholder="Enter Your Address" name="Customer_address" value="@Model[0].Customer_address" class="form-control mt-3" />
               
                <input type="hidden" placeholder="Enter Your Country" name="Customer_country" value="@Model[0].Customer_country" class="form-control mt-3" />

                <input type="submit" class="btn btn-primary" value="Change Image"/>
              </form>

            <form method="post" asp-action="CustomerUpdateProfile">

                <input type="hidden" name="Customer_id" value="@Model[0].Customer_id" />
                
                <input type="text" placeholder="Enter Your Name" name="Customer_name" value="@Model[0].Customer_name" class="form-control mt-3" />
                
                <input type="text" placeholder="Enter Your Phone" name="Customer_phone" value="@Model[0].Customer_phone" class="form-control mt-3" />
                
                <input type="text" placeholder="Enter Your Email" name="Customer_email" value="@Model[0].Customer_email" class="form-control mt-3" />
               
                <input type="text" placeholder="Enter Your Password" name="Customer_password" value="@Model[0].Customer_password" class="form-control mt-3" />
               
                <input type="hidden" placeholder="Enter Your Gender" name="Customer_gender" value="@Model[0].Customer_gender" class="form-control mt-3" />
               
                <input type="text" placeholder="Enter Your City" name="Customer_city" value="@Model[0].Customer_city" class="form-control mt-3" />
               
                <input type="text" placeholder="Enter Your Address" name="Customer_address" value="@Model[0].Customer_address" class="form-control mt-3" />
               
                <input type="text" placeholder="Enter Your Country" name="Customer_country" value="@Model[0].Customer_country" class="form-control mt-3" />
               
                <input type="hidden" placeholder="add image" name="Customer_image" value="@Model[0].Customer_image" />
                
                <input type="submit" class="btn btn-primary" class="mt-3" value="Update Profile"/>

               </form>
          </div>
        <div class="col-md-2"></div>
      </div>
</div>