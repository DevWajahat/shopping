<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Arts Stationary</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <link href="~/lib/remixicon/remixicon.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/swiper/swiper-bundle.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="~/js/slick.min.js"></script>

</head>
<body>
    <!-- header -->
    <div class="main-navbar shadow-sm sticky-top">
        <div class="top-navbar">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-2 my-auto d-none d-md-block">
                        <h5 class="brand-name">Arts Stationary</h5>
                    </div>
                    <div class="col-md-5 my-auto">
                        <form role="search" class="search-form">
                            <div class="input-group">
                                <input type="search"
                                       placeholder="Search for stationery"
                                       class="form-control rounded-pill" />
                                <button class="btn text-dark search-btn" type="submit">
                                    <i class="ri-search-line"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-5 my-auto">
                        <ul class="nav justify-content-end">
                            @if (string.IsNullOrEmpty(ViewBag.checkSession)){
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Customer" asp-action="customerLogin">
                                    Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Customer" asp-action="customerRegister">
                                    Signup
                                </a>
                            </li>
                            }
                            else{
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle"
                                   href="#"
                                   id="navbarDropdown"
                                   role="button"
                                   data-bs-toggle="dropdown">
                                    <i class="ri-user-line"></i> Account
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-action="customerAccount" asp-controller="customer"><i class="ri-user-line"></i> Profile</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#"><i class="ri-list-check"></i> Orders</a>
                                    </li>
                                    
                                    <li>
                                        <a class="dropdown-item" asp-controller="Customer" asp-action="fetchCart"><i class="ri-shopping-cart-line"></i> Cart</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-action="customerLogout" asp-controller="customer"><i class="ri-logout-box-line"></i> Logout</a>
                                    </li>
                                </ul>
                            </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand d-block d-md-none" href="#">Arts Stationary</a>
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-action="Index" asp-controller="Customer" >Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-action="" asp-controller="Customer">   About Us</a></li>
                        <li class="nav-item"><a class="nav-link" asp-action="feedback" asp-controller="Customer">Contact Us</a></li>
                        <li class="nav-item"><a class="nav-link" asp-action="fetchAllProducts" asp-controller="Customer">Product</a></li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle"
                               href="#"
                               id="navbarDropdownAccount"
                               role="button"
                               data-bs-toggle="dropdown"
                               aria-expanded="false">
                                <i class="ri-user-line"></i> Categories
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownAccount">
                                <li><a class="dropdown-item" href="#">@Html.Partial("_fetchCategoryInTabs", ViewData["category"])</li>
                  
                            </ul>
                        </li>


                         @*    <a class="nav-link dropdown-toggle"
                               href="#"
                               id="Dropdowncategory"
                               role="button"
                               data-bs-toggle="dropdown">
                                <i class="ri-user-line"></i> Category
                            </a>
                            <ul class="dropdown-menu" id="Dropdowncategory">
                                @Html.Partial("_fetchCategoryInTabs",ViewData["category"])
                            </ul> *@
                        
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    <!-- /header -->
    <div class="container-fluid" style="width:100% !important;">
        <main role="main" style="width:100% !important;" >
            @RenderBody()
        </main>
    </div>
