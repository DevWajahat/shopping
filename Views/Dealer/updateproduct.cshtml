@model Product

    <div class="container-fluid px-4">
        <h2 class="mt-4 text-center text-uppercase" style="letter-spacing:4px">My Profile</h2>
    </div>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
        <form method="post" asp-action="updateproduct" enctype="multipart/form-data">
            <input type="hidden" name="product_id" value="@Model.product_id" />
            <input type="text" name="product_name" placeholder="Enter your Name" value="@Model.product_name" class="form-control my-3" />
            <input type="text" name="product_price" placeholder="Enter your Email" value="@Model.product_price" class="form-control my-3" />
            <input type="text" name="product_description" placeholder="Enter your " value="@Model.product_description" class="form-control my-3" />
            <input type="text" name="product_no" placeholder="Enter your " value="@Model.product_no" class="form-control my-3" />
            @Html.Partial("CategoryDropdown", ViewData["category"])
            <input type="hidden" name="product_image" value="@Model.product_image" />
            <input type="submit" value="Update Product" class="form-control my-3 btn btn-primary" />
            </form>
        </div>
        <div class="col-md-2"></div>
    </div>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <form method="post" asp-action="ChangeProductImage" enctype="multipart/form-data">
            <input type="hidden" name="product_id" value="@Model.product_id" />
            <input type="hidden" name="product_name" placeholder="Enter your Name" value="@Model.product_name" class="form-control my-3" />
            <input type="hidden" name="product_price" placeholder="Enter your Email" value="@Model.product_price" class="form-control my-3" />
            <input type="hidden" name="product_description" placeholder="Enter your " value="@Model.product_description" class="form-control my-3" />
            <input type="hidden" name="product_no" placeholder="Enter your " value="@Model.product_no" class="form-control my-3" />
            <input type="hidden" name="cat_id" placeholder="Enter your " value="@Model.cat_id" class="form-control my-3" />
            <input type="file" name="product_image" value="@Model.product_image" />
       
                <img src="@("~/product_images/"+@Model.product_image)" style="width=250px;height=250px" asp-append-version="true" />
                <br />
                <input type="submit" value="change image" class="btn btn-primary" />
            </form>
        </div>
        <div class="col-md-2"></div>
    </div>

  