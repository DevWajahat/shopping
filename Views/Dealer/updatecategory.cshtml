@model Category;
<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase" style="letter-spacing:4px">Update / Edit Category</h2>
</div>

<div class="row">
    <div classs="col-md-2"></div>
    <div classs="col-md-8">
        <form method="post" enctype="multipart/form-data">
            <input type="hidden" name="category_id" value="@Model.category_id" />
            <input type="text" name="category_name" placeholder="Add category name" value="@Model.category_name" class="form-control my-3" />
            <input type="submit" class="btn btn-primary" value="Update Category" />
        </form>
    </div>
    <div classs="col-md-2"></div>
</div>
