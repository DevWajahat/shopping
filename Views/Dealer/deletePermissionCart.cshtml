@model Cart
<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-danger text-uppercase" style="letter-spacing:4px">Are you sure you want to delete this Cart?</h2>
</div>
<div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-8">
        <ul class="list-group">

            <li class="list-group-item">Cart  Id : @Model.cart_id</li>
            <li class="list-group-item">Product Name : @Model.product_id</li>
            <li class="list-group-item">Customer Name : @Model.customer_id</li>
            <li class="list-group-item">Product Quantity : @Model.product_quantity</li>
            <li class="list-group-item">Product Status : @Model.cart_status</li>


        </ul>

        <a href="@Url.Action("deleteCart","Dealer",new{id=Model.cart_id})" class="btn btn-danger">Delete </a>
        <a href="@Url.Action("fetchCart","Dealer")" class="btn btn-warning">Back to list</a>

    </div>
    <div class="col-md-2">
    </div>
